        <textarea placeholder="Эл. почта" cols="15" rows="1" Email="Email"></textarea>
        <button type="submit">Добавить</button>
    }
    <br>
    @using(Html.BeginForm("Delete", "Students", FormMethod.Post))
    {
        <textarea placeholder="Введите ID" cols="10" rows="1" name="id"></textarea>
        <button type="submit">Удалить</button>
    }
    <br>
    @using(Html.BeginForm("название метода", "название контроллера", FormMethod.Post))
