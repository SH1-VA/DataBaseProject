   <form action="https://localhost:7009/students/ViewSearch">
        <button style="position: absolute; top: 22%; left: 80%; display: inline-block;background: #2d5f84; color: white;
        padding: 3rem, 1.5rem; text-decoration: none;
        border-radius: 7%;">
        Поиск по студентам 🔍
    </button>
    </form>
    <img style="position: absolute;width: 100%;height: 3%;left: 0%;top: 28%;"
         src="~/Pictures/линии.jpg">
  
      
  <div style="position: absolute; top: 33%;">
         @using(Html.BeginForm("Create", "Students", FormMethod.Get))
         {
        <textarea placeholder="Фамилия" cols="15" rows="1" Name="LastName"></textarea>
        <textarea placeholder="Имя" cols="25" rows="1" Name="Name"></textarea>
        <textarea placeholder="Телефон" cols="15" rows="1" Name="PhoneNumber"></textarea>
        <textarea placeholder="Эл. почта" cols="15" rows="1" Name="Email"></textarea>
        <select name="Group" >
            @ViewBag.bag = "GroupNameList"
            @foreach (var Group in ViewBag.bag)
            {
                <option>@Group</option>
            }
        </select>
        <select name="Subgroup">
            <option value="True">A</option>
            <option value="False">B</option>
        </select>

        <button style="position: absolute; top: -1%; left: 101%;" type="submit">добавить</button>
        }
        @using(Html.BeginForm("Delete", "Students", FormMethod.Post))
        {
        <textarea placeholder="Введите ID" cols="10" rows="1" name="id"></textarea>
        <button style="position: absolute; top: 32%; left: 12%;" type="submit">удалить</button>
        }
        @using(Html.BeginForm("название метода", "название контроллера", FormMethod.Post))
        {
        <textarea placeholder="ID" cols="5" rows="1" ID="ID"></textarea>
        <textarea placeholder="Фамилия" cols="20" rows="1" LastName="LastName"></textarea>
        <textarea placeholder="Имя" cols="20" rows="1" Name="Name"></textarea>
        <textarea placeholder="Телефон" cols="20" rows="1" PhoneNumber="PhoneNumber"></textarea>
        <textarea placeholder="Эл. почта" cols="20" rows="1" Email="Email"></textarea>
        <button style="position: absolute;left: 86%" type="submit">редактировать</button>
        }
     </div>

    <div style="position: absolute; top: 48%;">
     <table border="1" cellpadding="10" cellspacing="10" style="border: 1% solid black">
		<caption align="top" style="color: black;font-size: 32px;line-height: 39px;"> Список студентов</caption>
        <tr>
            <th border="1" style="border: 1px solid black">
                ID
            </th>
            <th border="1" style="border: 1px solid black">
                ФАМИЛИМЯ
            </th>
            <th border="1" style="border: 1px solid black">
                ИМЯ
            </th>
            <th border="1" style="border: 1px solid black">
                НОМЕР ТЕЛЕФОНА
            </th>
            <th border="1" style="border: 1px solid black">
                ЭЛ. ПОЧТА
            </th>
        </tr>
        @foreach (var student in Model)
        {
    <tr>
        <td border="1" style="border: 1px solid black">@student.Id</td>
        <td border="1" style="border: 1px solid black">@student.LastName</td>
        <td border="1" style="border: 1px solid black">@student.Name</td>
        <td border="1" style="border: 1px solid black">@student.PhoneNumber</td>
        <td border="1" style="border: 1px solid black">@student.Email</td>

    </tr>}
    </table>
  </div> 
