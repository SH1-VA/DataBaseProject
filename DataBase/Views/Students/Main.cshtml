        <textarea placeholder="Имя" cols="20" rows="1" Name="Name"></textarea>
        <textarea placeholder="Телефон" cols="20" rows="1" PhoneNumber="PhoneNumber"></textarea>
        <textarea placeholder="Эл. почта" cols="20" rows="1" Email="Email"></textarea>
        <button type="submit">Редактировать</button>
