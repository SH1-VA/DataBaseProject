			<button style="position: absolute; top: -1%; left: 95%;" type="submit">добавить</button>
		}
		@using(Html.BeginForm("", "", FormMethod.Post))
		{
        <textarea placeholder="Введите ID" cols="10" rows="1" name="id"></textarea>
        <button style="position: absolute; top: 32%; left: 10%;" type="submit">удалить</button>
        }
        @using(Html.BeginForm("название метода", "название контроллера", FormMethod.Post))
