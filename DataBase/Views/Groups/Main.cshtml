@model IList<DataBase.Storage.Entity.Group>

	<h1>Группы:</h1>

	<table>
		<tr>
			<th>
				Идентификатор группы
			</th>
			<th>
				Номер группы (название)
			</th>
			<th>
				Кол-во студентов
			</th>
			<th>
				Направление подготовки
			</th>
		</tr>
		@foreach(var group in Model)
		{
			<tr>
				<td>@group.Id</td>
				<td>@group.Name</td>
				<td>@group.NumberOfStudents</td>
				<td>@group.Orientation</td>
			</tr>
		}
	</table>
