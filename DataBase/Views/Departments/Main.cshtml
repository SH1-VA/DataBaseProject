@model IList<DataBase.Storage.Entity.Department>

	    <img style="position: absolute; width: 18%; height: 23%; left: 1%; top: 2%;" 
		 src="~/Pictures/эмблема.png">
    <h1 style="position: absolute;width: 51%;height: 15%;left: 20%;top: 7%;
font-family: 'Inter';font-style: normal;font-weight: 400;
font-size: 230%;line-height: 115%;color: #2A3381;">
        Автоматизированное рабочее место
        <br> ФГБОУ ВО «МГТУ «СТАНКИН»
    </h1>
    <form action="https://localhost:7009/students/main">
        <button style="position: absolute;display: inline-block;background: #2d5f84; color: white;
				padding: 3rem, 1.5rem; text-decoration: none;
				border-radius: 7%;top: 22%; left: 20%;">
            Студенты
        </button>
    </form>
    <form action="https://localhost:7009/groups/main">
        <button style="position: absolute;display: inline-block;background: #2d5f84; color: white;
				padding: 3rem, 1.5rem; text-decoration: none;
				border-radius: 7%;top: 22%; left: 27%;">
            Группы
        </button>
    </form>
    <form action="https://localhost:7009/disciplines/main">
        <button style="position: absolute;display: inline-block;background: #2d5f84; color: white;
				padding: 3rem, 1.5rem; text-decoration: none;
				border-radius: 7%;top: 22%; left: 33%;">
            Дисциплины
        </button>
    </form>
    <form action="https://localhost:7009/departments/main">
        <button style="position: absolute;display: inline-block;background: #2d5f84; color: white;
				padding: 3rem, 1.5rem; text-decoration: none;
				border-radius: 7%;top: 22%; left: 42%;">
            Кафедры
        </button>
    </form>
    <form action="https://localhost:7009/specialitys/main">
        <button style="position: absolute;display: inline-block;background: #2d5f84; color: white;
				padding: 3rem, 1.5rem; text-decoration: none;
				border-radius: 7%;top: 22%; left: 49%;">
            Специальности
        </button>
    </form>
    <form action="https://localhost:7009/teachers/main">
        <button style="position: absolute;display: inline-block;background: #2d5f84; color: white;
				padding: 3rem, 1.5rem; text-decoration: none;
				border-radius: 7%;top: 22%; left: 60%;">
            Преподаватели
        </button>
    </form>

    <img style="position: absolute;width: 100%;height: 3%;left: 0%;top: 28%;"
         src="~/Pictures/линии.jpg">
    <div style="position: absolute; top: 33%;">
        @using (Html.BeginForm("Create", "Departments", FormMethod.Get))
		{
			<textarea placeholder="Название кафедры" cols="80" rows="1"name="Name" id="Name"></textarea>
			<textarea placeholder="Эл. почта" cols="20" rows="1"name="Email" id="Email"></textarea>
			<textarea placeholder="Телефон" cols="12" rows="1" name="PhoneNumber" id="PhoneNumber"></textarea>
			<textarea placeholder="Аудитория" cols="10" rows="1"name="audiencenumberString" id="audiencenumberString"></textarea>
			<button style="position: absolute; background: #2d5f84; color: white;
				padding: 3rem, 1.5rem; text-decoration: none;
				border-radius: 7%; top: -1%; left: 95%;" type="submit">ДОБАВИТЬ</button>
		}
		@using(Html.BeginForm("Delete", "Departments", FormMethod.Post))
		{
        <textarea placeholder="Введите ID" cols="10" rows="1" name="id"></textarea>
        <button style="position: absolute; background: #2d5f84; color: white;
				padding: 3rem, 1.5rem; text-decoration: none;
				border-radius: 7%; top: 32%; left: 10%;" type="submit">УДАЛИТЬ</button>
        }
        @using(Html.BeginForm("Edit", "Departments", FormMethod.Post))
		{
        <textarea placeholder="ID" cols="5" rows="1" name="idstring"></textarea>
        <textarea placeholder="Название кафедры" cols="80" rows="1" name="Name"></textarea>
		<textarea placeholder="Эл. почта" cols="20" rows="1" name="Email"></textarea>
        <textarea placeholder="Телефон" cols="12" rows="1" name="PhoneNumber"></textarea>
        <textarea placeholder="Аудитория" cols="10" rows="1" name="AudienceNumberString"></textarea>
        <button style="position: absolute; background: #2d5f84; color: white;
				padding: 3rem, 1.5rem; text-decoration: none;
				border-radius: 7%; left: 101%"type="submit">РЕДАКТИРОВАТЬ</button>
		}
     </div>
	 <div style="position: absolute; top: 48%;">
     <table border="1" cellpadding="10" cellspacing="10" style="border: 1% solid black">
		<caption align="top" style="color: black;font-size: 32px;line-height: 39px;"> Кафедры</caption>
		<tr>
			<th border="1" style="border: 1px solid black">
				ID
			</th>
			<th border="1" style="border: 1px solid black">
				НАЗВАНИЕ
			</th>
			<th border="1" style="border: 1px solid black">
				ЭЛ. ПОЧТА
			</th>
			<th border="1" style="border: 1px solid black">
				ТЕЛЕФОН
			</th>
			<th border="1" style="border: 1px solid black">
				АУДИТОРИЯ
			</th>
		</tr>
		@foreach(var department in Model)
		{
			<tr>
				<td border="1" style="border: 1px solid black">@department.Id</td>
				<td border="1" style="border: 1px solid black">@department.Name</td>
				<td border="1" style="border: 1px solid black">@department.Email</td>
				<td border="1" style="border: 1px solid black">@department.PhoneNumber</td>
				<td border="1" style="border: 1px solid black">@department.AudienceNumber</td>
			</tr>
		}
	</table>
	</div>